@inherits LayoutComponentBase


<MudThemeProvider Theme="@AtowerTheme.Default" @bind-IsDarkMode="@_isDarkMode" />
<MudDialogProvider />
<MudSnackbarProvider />
 
<div class="page2">
    <MudGrid Spacing="0" Class="mud-height-full">
        <MudItem xs="9" Class="relative">
            <div>
                <div class="color-mask"></div>
                <MudImage Src="images/fondo.jpg" Class="full-image" />
                <div class="cajon-texto ">

                    <MudGrid Spacing="0" class="no-margin-padding">
                        <MudItem xs="12" class="montserrat-heading" Style="height: 100px;">
                            <MudImage Src="images/atower-logo.svg" Class="logo" Style="padding-left: 8px;" />
                        </MudItem>
                        <MudItem xs="12" class="montserrat-heading titulo-software">
                            Sisma Reloj
                        </MudItem>
                        <MudItem xs="12" Class="montserrat-body contenido-software">
                           Seguimiento Horarios
                        </MudItem>
                        <MudItem xs="12" Class="montserrat-content">
                            Seguimiento de entradas y salidas de empleados<br /> lo que finalmente conduce al exito
                            y la rentabilidad sostenible en esta industria altamente competitiva
                        </MudItem>
                    </MudGrid>
                </div>
            </div>            
        </MudItem>
        <MudItem xs="3">
            <MudPaper Class="mud-height-full" Outlined="true">

                <MudGrid Spacing="0">
                    <MudItem xs="12" Class="m-5">
                        <MudPaper Class="d-flex align-center py-10 border-none" Outlined="true">
                            @Body
                        </MudPaper>
                    </MudItem>
                </MudGrid>

            </MudPaper>
        </MudItem>
    </MudGrid>
</div>

 
@code {
    [Parameter]
    public string Titulo { get; set; }

    [Parameter]
    public string Texto { get; set; }

}
